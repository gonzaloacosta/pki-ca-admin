# Environment Configuration
# Copy this file to .env and update the values

# Application Settings
DEBUG=true
SECRET_KEY=change-me-in-production
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]

# Database
DATABASE_URL=postgresql+asyncpg://pki_admin:pki_admin@localhost:5432/pki_ca_admin
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Authentication
JWT_SECRET_KEY=jwt-secret-change-me
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# AWS KMS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_KMS_KEY_ARN=arn:aws:kms:us-east-1:123456789012:key/your-key-id

# step-ca Integration
STEPCA_BASE_PATH=/opt/stepca
STEPCA_CONFIG_PATH=/opt/stepca/config
STEPCA_DATA_PATH=/opt/stepca/data

# Default CA Settings
DEFAULT_CA_KEY_TYPE=ecdsa-p256
DEFAULT_CA_VALIDITY_YEARS=10
DEFAULT_CERT_VALIDITY_DAYS=365

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15

# Audit
AUDIT_RETENTION_DAYS=2555

# Notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@pki-ca-admin.local

SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK